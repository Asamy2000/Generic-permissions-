@using PAT.AccessModel.Models.Info
@model IReadOnlyList<Role>
@{
    ViewData["Title"] = "Index";
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row ">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">الأدوار</h1>
            </div>
            <!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"> <a asp-controller="Home" asp-action="Index">الرئيسية</a></li>
                    <li class="breadcrumb-item active">الأدوار</li>
                </ol>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
</div>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">جميع الأدوار</h3>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 1%">
                        #
                    </th>
                    <th style="width: 20%">
                        Name
                    </th>
                    <th style="width: 20%">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>
                            #
                        </td>
                        <td>

                            @role.Name

                        </td>


                        <td class="project-actions text-right">
                            @if (role.Name != "Super")
                            {
                                <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@role.id">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    تعديل
                                </a>
                                <a href="javascript:;" class="btn btn-danger btn-sm js-delete" data-id="@role.id">
                                    <i class="fas fa-trash">
                                    </i>
                                    حذف
                                </a>
                            }
                        </td>
                    </tr>

                }


            </tbody>

        </table>


    </div>

</div>

<a class="btn btn-primary btn-lg  mt-2"  asp-action="Create">
    <i class="bi bi-plus-circle-dotted"></i>
</a>

