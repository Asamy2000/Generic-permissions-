@using PAT.AccessModel.Models.Info
@model AccreditedCenter

@{
    ViewData["Title"] = "Index";
}


<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css"
          integrity="sha384-nU14brUcp6StFntEOOEBvcJm4huWjB0OcIeQ3fltAfSmuZFrkAif0T+UtNGlKKQv" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/center-page.css" />

</head>

<!-- HEADER -->
<header class="header">
    <div class="banner">
        <div class="banner_header-container">
            <h1 class="banner__header">@Model.Name</h1>
            <p class="banner__crumbs">
                الرئيسية>>المراكز المعتمدة>> منصة إيوث التعليمية
            </p>
        </div>
   
    </div>
</header>
<!-- MAIN -->
<main class="main">
    <section class="center-card my-5">
        <div class="center-card_img">
            <img src="http://101.44.222.243:3000/Images/AccreditedCentersImages/@Model.LogoPath" alt="eYouth Center Logo" />
        </div>
        <div class="center-card_details">
            <div class="contact-info__field">
                <h6 class="contact-info__field-header">
                    <i data-feather="phone"></i>خدمة المواطنين ( الإستفسارات والشكاوى
                </h6>
                <p class="contact-info__field-data"> الرقم الموحد : @Model.PhoneNumber</p>
            </div>
            <div class="contact-info__field">
                <h6 class="contact-info__field-header">
                    <i data-feather="mail"></i>البريد الالكترونى الرسمى :
                </h6>
                <p class="contact-info__field-data"> @Model.Email</p>
            </div>
            <div class="contact-info__field">
                <h6 class="contact-info__field-header">
                    <i data-feather="map-pin"></i>عنوان الأكاديمية ( المقر الرئيسي ) :
                </h6>
                <p class="contact-info__field-data">
                           @Model.Address
                </p>
            </div>
        </div>
    </section>
    <section class="center-description my-5">
        <h3 class="center-description__header">نبذة عن المركز :</h3>
        <p class="center-description__paragraph">
            @Model.Description
        </p>
    </section>
    <section class="center-trainigs my-5">
        <h3 class="center-trainings__header">
            الدورات التدريبية المقدمة من خلاله :
        </h3>
        <div class="media-scroller snaps-inline training-cards">
            <div class="media-element">
                <img src="https://images.unsplash.com/photo-1641353989082-9b15fa661805?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwxNDU4OXwwfDF8cmFuZG9tfHx8fHx8fHx8MTY0MzM5ODcyOA&ixlib=rb-1.2.1&q=80&w=400"
                     alt="" />
                <p class="title">استراتيجيات التفكير الناقد واتخاذ القرارات</p>
                <button class="training-register">التسجيل</button>
            </div>
            <div class="media-element">
                <img src="https://images.unsplash.com/photo-1641353989082-9b15fa661805?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwxNDU4OXwwfDF8cmFuZG9tfHx8fHx8fHx8MTY0MzM5ODcyOA&ixlib=rb-1.2.1&q=80&w=400"
                     alt="" />
                <p class="title">استراتيجيات التفكير الناقد واتخاذ القرارات</p>
                <button class="training-register">التسجيل</button>
            </div>
            <div class="media-element">
                <img src="https://images.unsplash.com/photo-1641353989082-9b15fa661805?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwxNDU4OXwwfDF8cmFuZG9tfHx8fHx8fHx8MTY0MzM5ODcyOA&ixlib=rb-1.2.1&q=80&w=400"
                     alt="" />
                <p class="title">استراتيجيات التفكير الناقد واتخاذ القرارات</p>
                <button class="training-register">التسجيل</button>
            </div>
        </div>
    </section>
</main>

