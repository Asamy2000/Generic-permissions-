@using PAT.AccessModel.Models.Info
@model List<WhatsNew>

<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>whats new</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="~/css/whats-new.css" rel="stylesheet" />
</head>

<body>
    <header class="whatsNew-header">
        <h2 class="whatsNew-header-title">جديد الاكاديمية</h2>
        <div class="whatsNew-header-subtitle">عن الاكاديمية  >>  جديد الاكاديمية</div>
        <button class="banner__help">
            <img src="~/assets/help-icon.svg" alt="" srcset="" />المساعدة
          </button>
  
    </header>

    <div class="whats-new-content" >
				@foreach (var item in Model)
				{
					<div class="card">
            <h5 class="card-header">@item.Title</h5>
            <img src="@item.Image" alt="new" class="card-img">
            <div class="card-text">
                <img src="../assets/whats-new/clock.png" alt="clock">
                <small class="text-muted">@item.Date</small>
            </div>
            <div class="card-text">@item.Content</div>
            <div class="card-title">@item.Source</div>
        </div>
				}
    </div>

    <div  class="mt-3 pagination"></div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/whats-new.js"></script>
</body>

</html>
