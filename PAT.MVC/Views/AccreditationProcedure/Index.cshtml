@using PAT.AccessModel.Models.Info
@model IReadOnlyList<AccreditationProcedureCategory>
@{
ViewData["Title"] = "Index";
}


  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/list.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="../../css/layout.css" />*@
    <title>Document</title>
  </head>


    <!-- HEADER -->
    <header class="header">
      <div class="banner">
        <div class="banner_header-container">
          <h1 class="banner__header">الأعتمادات</h1>
            <p class="banner__crumbs">الرئيسية>>الأعتمادات</p>
        </div>
      </div>
    </header>
    <section class="accreditation-list">

        @foreach (var item in Model)
    {
        <div class="list-item">
            <a class="btn btn-sm" asp-action="Details" asp-route-id="@item.Id">
                <i class="fas fa-pencil-alt">
                </i>
                @item.Name
            </a>
        </div>
    }
     
    </section>

