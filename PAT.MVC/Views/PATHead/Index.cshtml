@using PAT.AccessModel.Models.Info
@model List<PATManager>
@{
    var activeManager = Model.FirstOrDefault();
}
<head>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css"
        integrity="sha384-nU14brUcp6StFntEOOEBvcJm4huWjB0OcIeQ3fltAfSmuZFrkAif0T+UtNGlKKQv" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/PAT-Head.css" />
    <script src="https://unpkg.com/feather-icons"></script>
    <title>PAT Managers</title>
</head>


    <header class="header w-100">
        <div class="banner">
            <div class="banner_header-container">
                <h1 class="banner__header">إدارة الاكاديمية</h1>
                <p class="banner__crumbs">عن الاكاديمية >> السيرة الذاتية لمدير الاكاديمية</p>
            </div>
  
        </div>
    </header>

@if (Model.Any())
{
    <section class="minister my-4 ms-3">
        <h2 class="minister-title">وزير التربية والتعليم والتعليم الفني</h2>
        <div class="name-card">

            <img src="http://101.44.222.243:3000/Images/PATHeadImages/@activeManager.imagePath" alt="">
            @* <img src="https://localhost:44386/Images/PATHeadImages/@activeManager.imagePath" alt=""> *@
            <p>@activeManager.Name </p>
        </div>
        <p class="minister-bio">
            @activeManager.Desc
        </p>

    </section>
    <section class="director my-4 ms-3">
        <h2 class="director-title">وزير التربية والتعليم والتعليم الفني</h2>
        <div class="name-card">
            <img src="http://101.44.222.243:3000/Images/PATHeadImages/@activeManager.imagePath" alt="">
            <p>@activeManager.Name </p>
        </div>
        <div class="director-info">
            <div class="info-table">
                <h3 class="basic-data">بيانات أساسية:</h3>
                <table class="basic-data__table">
                    <tr>
                        <th>الاسم</th>
                        <td>@activeManager.Name</td>
                    </tr>
                    <tr>
                        <th>تاريخ الميلاد</th>
                        <td>@activeManager.dateBirth.ToString("d")</td>
                    </tr>
                    <tr>
                        <th>محل الميلاد</th>
                        <td>@activeManager.Government.Name</td>
                    </tr>
                </table>
            </div>
            <div class="info-table">
                <h3 class="certificate-data">التأهيل العلمي:</h3>
                <table class="certificate-table">
                    <tr>
                        <th>المؤهل</th>
                    </tr>
                    @foreach (var item in activeManager.certificates)
                    {
                        <tr>
                            <td>@item.certificateName - @item.certificateName</td>
                        </tr>
                    }

                </table>
            </div>
            <div class="info-table">
                <h3 class="certificate-data">الوظائف والخبرات العملية السابقة:</h3>
                <table class="experience-table">
                    <tr>
                        <th>الوظيفة</th>
                    </tr>
                    @foreach (var item in activeManager.experiences)
                    {

                        <tr>
                            <td class="d-flex justify-content-between">

                                <p> من:@item.StartDate.ToString("d")</p>
                                <p>   </p>
                                <p>@item.Title</p>
                                <p>   </p>
                                <p> إلي:@item.EndDate.ToString("d")</p>

                            </td>
                        </tr>

                    }

                </table>
            </div>
        </div>
    </section>
}
else
{
    <div class=" m-5">

        No Manager Found ....
    </div>
}


